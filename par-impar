using System;

namespace labs
{
    class Program
    {
        static void Main(string[] args)
        {
            int numero;

            Console.Write("Ingrese un n√∫mero: ");
            numero = Convert.ToInt32(Console.ReadLine());

            if (numero % 2 == 0)
            {
                Console.Write("El numero es par.", numero);
                Console.ReadKey();
            }
            else
            {
                Console.Write("El numero es impar.", numero);
                Console.ReadKey();

            }
        }
}
