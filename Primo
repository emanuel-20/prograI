using System;

namespace primo
{
    class Program
    {
        static void Main(string[] args)
        {
            int numero;

            Console.WriteLine("Ingrese un numero: ");
            numero = (Convert.ToInt32(Console.ReadLine()));

            if(numero % 2 == 0)
            {
                Console.WriteLine("El numero no es primo: " + numero);
            }
            else
            {
                Console.WriteLine("El numero es primo: " + numero);
            }
        }
    }
}
